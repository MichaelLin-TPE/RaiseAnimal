<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/bottom_tab_icon"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/tab_icon_size"
        android:layout_height="@dimen/tab_icon_size"/>

    <TextView
        android:id="@+id/bottom_tab_title"
        android:textSize="@dimen/tab_title_size"
        android:textColor="@color/black"
        android:text="@string/test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
